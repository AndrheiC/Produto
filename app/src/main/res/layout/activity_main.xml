<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="opet.acs.com.produto.MainActivity">

    <EditText
        android:id="@+id/editNome"
        android:hint="Nome do Produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinnerCategoria"
        android:entries="@array/lista_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <EditText
        android:id="@+id/editQuantidade"
        android:hint="Quantidade do Produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editValorUnitario"
        android:hint="Valor do Produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="salvarProduto"
        android:id="@+id/btnSalvar"
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="ordenaPorNota"
        android:id="@+id/btnListar"
        android:text="Listar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/listFilme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>